; vim: ft=scheme
((author "siiky")
 (license "unlicense")
 (synopsis "Convert nice looking MD to nice looking HTML")
 (version "0.0.1")
 (dependencies
   lowdown
   optimism
   srfi-1
   srfi-13
   sxml-transforms
   typed-records)
 (component-options (csc-options "-O0" "-d3"))
 (components
   (extension md2html
              (types-file)
              (modules md2html)
              (source md2html.scm))
   (extension idx2html
              (modules idx2html)
              (source idx2html.scm))
   (extension fold-args
              (modules fold-args)
              (source fold-args.scm))
   (program ssg
            (component-dependencies md2html fold-args)
            (source ssg.scm))
   (program ssg-idx
            (component-dependencies idx2html)
            (source ssg-idx.scm))))
